/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-ar6mxcs.dtsi"
#include "imx6dl-ar6mxcs.dtsi"

/ {
	memory {
		reg = <0x10000000 0x20000000>;
	};
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu1-di1";
		display-timings {
			native-mode = <&fg_1024x600>;
		};
	};

	lvds-channel@1 {
		crtc = "ipu1-di0";
	};
};

&mxcfb1 {
	interface_pix_fmt = "RGB666";
	default_bpp = <16>;
};
